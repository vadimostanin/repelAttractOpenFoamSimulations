        {
           nSurfaceLayers 5;
           finalLayerThickness 0.0014;
        }

        cylinder_set2_0
        {
           nSurfaceLayers 5;
           finalLayerThickness 0.0014;
        }
        cylinder_set2_1
        {
           nSurfaceLayers 5;
           finalLayerThickness 0.0014;
        }
        cylinder_set2_2
        {
           nSurfaceLayers 5;
           finalLayerThickness 0.0014;
        }
        cylinder_set2_3
        {
